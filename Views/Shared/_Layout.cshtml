<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WeFly</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TP09_Zalcman_Gitman.styles.css" asp-append-version="true" />
</head>
<body>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

   <header>
        <nav class="menu navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container">
                <a class="home" asp-area="" asp-controller="Home" asp-action="Index"><img class="logo" src="/LogoProgViaje.png"></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @{
                            if(ViewBag.destacado == "Home")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index"><b>Home</b></a>
                                </li>
                            }
                            else{
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                            }
                            if(ViewBag.destacado == "Destinos")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Destinos"><b>Destinos</b></a>
                                </li>
                            }
                            else{
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Destinos">Destinos</a>
                                </li>
                            }
                        }
                        <form class="form-inline my-2 my-lg-0 buscar">
                            <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                               <input class="form-control mr-sm-2" type="search" placeholder="Buscá un destino" aria-label="Search"> 
                            </li>
                            <li class="nav-item">
                               <button class="btn btn-outline-secondary" type="submit">Buscar</button> 
                            </li>
                            </ul>
                        </form>
                    </ul>
                    <div class="sesion nav-item">
                        <a class="btn btn-success" asp-area="" asp-controller="Home" asp-action="Tutorial">Iniciar sesión</a>
                        <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Comenzar">Registrarse</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="foot text-muted">
        <div class="container">
            &copy; 2022 - Matias Zalcman & Bryan Gitman 4IB
        </div>
    </footer>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
