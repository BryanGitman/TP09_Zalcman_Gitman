@{
    ViewData["Title"] = "Home";
}
<div class="container contenido">
    <br>
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <div class="post">
                <br>
                <div class="row dataPost">
                    <div class="circulo">
                        <img src="/selfie0.jpg" id="imagen0">
                        <script>
                            HorizontalOVertical("imagen0");
                        </script>
                    </div>
                    <div class="col-sm-5">
                        <div class="user">
                            <p>usuario.viajero12345</p>
                            <p class="text-muted">de País</p>
                        </div>
                        <p class="text-muted">Destino</p>
                    </div>
                    <div class="col-sm-5">
                        <p class="text-muted dataPost">Experiencia:</p>
                        <div>
                            <img class="estrella" src="/estrellaon.png">
