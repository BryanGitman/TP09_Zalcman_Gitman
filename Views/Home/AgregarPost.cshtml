@{
    ViewData["Title"] = "Agregar Publicaci√≥n";
}
<div class="container contenido">
    <br>
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <div class="post">
                <br>
                <form method="post" action='@Url.Action("GuardarPost","Home")' enctype="multipart/form-data"> 
                    <div class="row">
                        <div class = "col-sm-4">
                            <span class ="ingresarFoto"> 
                                <input type="file" name="Archivo1" id="ingresarAP">
                            </span>
                            <label for="ingresarAP"> 
                                <span>+</span>
                            </label>
                            <p class="selectD">Seleccionar foto 1</p>
                        </div>
                        <div class = "col-sm-4">
                            <span class ="ingresarFoto"> 
                                <input type="file" name="Archivo2" id="ingresarAP">
                            </span>
                            <label for="ingresarAP"> 
                                <span>+</span>
                            </label>
                            <p class="selectD">Seleccionar foto 2</p>
                        </div>
                        <div class = "col-sm-4">
                            <span class ="ingresarFoto"> 
                                <input type="file" name="Archivo3" id="ingresarAP">
                            </span>
                            <label for="ingresarAP"> 
                                <span>+</span>
                            </label>
                            <p class="selectD">Seleccionar foto 3</p>
                        </div>
                    </div> 
                    <div class = "select">
                        <p>Escribir Opinion</p>
                        <textarea name="Opinion" rows="5" cols="75"></textarea>
                    </div>  
                    <div class = "row">
                        <div class="col-sm-6">
                            <p class="selectD">Seleccionar destino</p>
                            <select name = "IDDestino" class="inputD">
                                @{
                                    foreach(Destino dest in ViewBag.listadoDestinos)
                                    {
                                        <option value="@dest.ID">@dest.Nombre</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-sm-5">
                            <div class="derecha">
                                <p>Calificar experiencia</p>
                                <div class="alrevez">
                                    <input id="radio1" type="radio" name="Estrellas" value="5">
                                    <label for="radio1"></label>
                                    <input id="radio2" type="radio" name="Estrellas" value="4">
                                    <label for="radio2"></label>
                                    <input id="radio3" type="radio" name="Estrellas" value="3">
                                    <label for="radio3"></label>
                                    <input id="radio4" type="radio" name="Estrellas" value="2">
                                    <label for="radio4"></label>
                                    <input id="radio5" type="radio" name="Estrellas" value="1" required>
                                    <label for="radio5"></label>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-1"></div>
                    </div>
                    <input type="hidden" name="IDUsuario" value="@ViewBag.usuario.ID">
                    <input type="hidden" name="FechaPublicacion" value="@DateTime.Now">
                    <input type="submit" class="btn btn-primary publicar" value="Publicar">
                </form>
            </div>
        </div>
        <div class="col-sm-3"></div>
    </div>
</div>